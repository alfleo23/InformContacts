@model List<Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h1>Contacts</h1>

<table style="height: 39px; margin-left: auto; margin-right: auto; border-collapse:collapse" width="70%">
    <thead>
        <tr style="text-align:center">
            <th>
                First Name
			</th>
            <th>
                Last Name
			</th>
            <th>
                Company
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var contact in Model)
            {
                <tr style="border-bottom: 1pt solid black">
                    <td style="width: 166px; text-align: center;">
                        @contact.FirstName 
                    </td>
                
                    <td style="width: 166px; text-align: center;">
                        @contact.LastName 
                    </td>
                
                    <td style="width: 166px; text-align: center;">
                        @contact.Company 
                    </td>
                
                    <td style="width: 166px; text-align: center;">
                        @contact.PhoneNumber 
                    </td>
                    <td style="width: 166px; text-align: center;">
                        <a asp-controller="Home" asp-action="EditContact" asp-route-id="@contact.ContactId">Edit</a>
                    </td>
                </tr>
            }
    </tbody>
</table>
